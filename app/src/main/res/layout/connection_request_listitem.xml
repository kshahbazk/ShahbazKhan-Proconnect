<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/nliveo_blue_gray_colorPrimaryDark"
    >

    <TextView
        android:id="@+id/namelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECTION REQUEST FROM: "
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textColor="@color/nliveo_white"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
         />



    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@+id/namelabel"
        android:id="@+id/linearLayout2"
        android:background="@color/nliveo_blue_gray_colorPrimary"
        >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/imageView3"
            android:src="@drawable/mys"
            />
        <TextView
            android:id="@+id/nameCRLabel"
            android:text="Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/nliveo_white"
            />
        <TextView
            android:id="@+id/emailCRLabel"
            android:text="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@+id/nameCR"
            android:textColor="@color/nliveo_white"
            />
        <TextView
            android:id="@+id/joinedCRLabel"
            android:text="Joined: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@+id/emailCR"
            android:textColor="@color/nliveo_white"
            />

        <TextView
            android:id="@+id/nameCR"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nameCRLabel"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/nliveo_white"
            />
        <TextView
            android:id="@+id/emailCR"
            android:text="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/emailCRLabel"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@+id/nameCR"
            android:textColor="@color/nliveo_white"
            />
        <TextView
            android:id="@+id/joinedCR"
            android:text="joined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/joinedCRLabel"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@+id/emailCR"
            android:textColor="@color/nliveo_white"
            />




    </RelativeLayout>




</RelativeLayout>