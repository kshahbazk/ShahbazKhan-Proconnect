<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/nliveo_blue_gray_colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@color/nliveo_blue_gray_colorPrimary"
            android:id="@+id/topSection">


            <ImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:id="@+id/mys1"
                android:src="@drawable/mys"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name: "
                android:textSize="@dimen/abc_text_size_caption_material"
                android:layout_marginTop="@dimen/margin_medium"
                android:id="@+id/nameLabel"
                android:layout_alignTop="@+id/mys1"
                android:layout_toRightOf="@+id/mys1"
                android:textColor="@color/nliveo_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Email: "
                android:layout_marginTop="@dimen/margin_small"
                android:id="@+id/emailLabel"
                android:layout_toRightOf="@+id/mys1"
                android:layout_below="@+id/nameLabel"
                android:textColor="@color/nliveo_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Joined: "
                android:layout_marginTop="@dimen/margin_small"
                android:id="@+id/joinLabel"
                android:layout_toRightOf="@+id/mys1"
                android:textColor="@color/nliveo_white"
                android:layout_below="@+id/emailLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Member Status: "
                android:layout_marginTop="@dimen/margin_small"
                android:id="@+id/memberLabel"
                android:layout_marginBottom="@dimen/margin_small"
                android:textColor="@color/nliveo_white"
                android:layout_toRightOf="@+id/mys1"
                android:layout_below="@+id/joinLabel"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Name "
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="@color/nliveo_white"
                android:id="@+id/name"
                android:layout_alignTop="@+id/mys1"
                android:layout_toRightOf="@+id/nameLabel"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Email "
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/nliveo_white"
                android:id="@+id/email"
                android:layout_toRightOf="@+id/emailLabel"
                android:layout_below="@+id/name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Joined "
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/nliveo_white"
                android:id="@+id/join"
                android:layout_toRightOf="@+id/joinLabel"
                android:layout_below="@+id/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:text="Member "
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/nliveo_white"
                android:id="@+id/member"
                android:layout_toRightOf="@+id/memberLabel"
                android:layout_below="@+id/join"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:text="    Upgrade to \n view full profile"
            android:id="@+id/p_header"
            android:textColor="@color/nliveo_white"
            android:layout_below="@id/topSection"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            />
        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/connect_disconnect_update"
            android:text="Button"
            android:textColor="@color/nliveo_white"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/nliveo_blue_gray_colorPrimary"
            android:layout_below="@+id/topSection"
            android:layout_toLeftOf="@+id/exit"
            android:layout_toStartOf="@+id/exit" />

        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/exit"
            android:text="Exit"
            android:textColor="@color/nliveo_white"
            android:background="@color/nliveo_blue_gray_colorPrimary"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@+id/topSection"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_medium"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p_header"
            android:id="@+id/bottomSection"
            android:background="@color/nliveo_blue_gray_alpha_colorPrimaryDark"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@color/nliveo_blue_gray_colorPrimary"
                android:id="@+id/edu">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Most Recent Education"
                    android:textColor="@color/black"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/EducationLabel"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/educationpic"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_alignBottom="@+id/EducationLabel"
                    android:layout_toRightOf="@+id/EducationLabel"
                    android:layout_toEndOf="@+id/EducationLabel"
                    android:src="@drawable/ic_school_black_48dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="School: "
                    android:textColor="@color/nliveo_white"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/school"
                    android:layout_below="@+id/EducationLabel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Degree: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/degree"
                    android:layout_below="@+id/school"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Graduation Year: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/gradYear"
                    android:layout_below="@+id/degree"
                    android:layout_marginBottom="@dimen/margin_small"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_toRightOf="@id/school"
                    android:layout_alignBottom="@id/school"
                    android:id="@+id/putschool"
                    android:layout_below="@+id/EducationLabel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@id/degree"
                    android:textColor="@color/nliveo_white"
                    android:layout_alignBottom="@id/degree"
                    android:id="@+id/putdegree"
                    android:layout_below="@+id/school"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@id/gradYear"
                    android:textColor="@color/nliveo_white"
                    android:layout_alignBottom="@id/degree"
                    android:id="@+id/putGradYear"
                    android:layout_below="@+id/putdegree"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="view all>>"
                    android:id="@+id/viewall1"
                    android:textSize="10dp"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edu"
                android:id="@+id/exp"
                android:background="@color/nliveo_blue_gray_colorPrimary"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Position"
                    android:textColor="@color/black"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/ProffesionLabel"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/companypic"
                    android:src="@drawable/ic_domain_black_48dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_alignBottom="@+id/ProffesionLabel"
                    android:layout_toRightOf="@+id/ProffesionLabel"
                    android:layout_toEndOf="@+id/ProffesionLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Current Company: "
                    android:textColor="@color/nliveo_white"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/currentCompany"
                    android:layout_below="@+id/ProffesionLabel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Current Title: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/currentTitle"
                    android:layout_below="@+id/currentCompany"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Start Date: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/startDate"
                    android:layout_below="@+id/currentTitle"
                    android:layout_marginBottom="@dimen/margin_small"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_toRightOf="@id/currentCompany"
                    android:layout_alignBottom="@id/currentCompany"
                    android:id="@+id/putcompany"
                    android:layout_below="@+id/ProffesionLabel"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_toRightOf="@id/currentTitle"
                    android:layout_alignBottom="@id/currentTitle"
                    android:id="@+id/putTitle"
                    android:layout_below="@+id/putcompany"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/nliveo_white"
                    android:layout_toRightOf="@id/startDate"
                    android:layout_alignBottom="@id/startDate"
                    android:id="@+id/putstartDate"
                    android:layout_below="@+id/putTitle"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="view all>>"
                    android:id="@+id/viewall2"
                    android:textSize="10dp"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_below="@+id/putcompany"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exp"
                android:id="@+id/preference"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/nliveo_blue_gray_colorPrimary"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employment Prefences"
                    android:textColor="@color/black"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/employmentpreferences"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/prefpic"
                    android:src="@drawable/ic_whatshot_black_48dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_alignBottom="@+id/employmentpreferences"
                    android:layout_toRightOf="@+id/employmentpreferences"
                    android:layout_toEndOf="@+id/employmentpreferences" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Desired Locale: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:textColor="@color/nliveo_white"
                    android:id="@+id/desiredLocale"
                    android:layout_below="@+id/employmentpreferences"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Desired Title: "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:id="@+id/desiredTitle"
                    android:textColor="@color/nliveo_white"
                    android:layout_below="@+id/desiredLocale"
                    android:layout_marginBottom="@dimen/margin_small"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@id/desiredLocale"
                    android:layout_alignBottom="@id/desiredLocale"
                    android:textColor="@color/nliveo_white"
                    android:id="@+id/putDesiredLocale"
                    android:layout_below="@+id/employmentpreferences"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="N/A "
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@id/desiredTitle"
                    android:layout_alignBottom="@id/desiredTitle"
                    android:textColor="@color/nliveo_white"
                    android:id="@+id/putDesiredTitle"
                    android:layout_below="@+id/putDesiredLocale"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>