<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="momenify.proconnect.navigationviewpagerliveo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
        <activity
            android:name=".NavigationMain"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.parse.ui.ParseLoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >

            <!-- For more options, see https://www.parse.com/docs/android_guide#ui-login -->
            <meta-data
                android:name="com.parse.ui.ParseLoginActivity.PARSE_LOGIN_ENABLED"
                android:value="true" />
            <meta-data
                android:name="com.parse.ui.ParseLoginActivity.PARSE_LOGIN_EMAIL_AS_USERNAME"
                android:value="true" />
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="momenify.proconnect.navigationviewpagerliveo.NavigationMain" />
        </activity>
        <activity
            android:name="momenify.proconnect.objects.UserProfileView"
            android:label="@string/title_activity_user_profile_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="momenify.proconnect.navigationviewpagerliveo.NavigationMain" />
        </activity>
        <activity
            android:name="momenify.proconnect.objects.Acceptance"
            android:theme="@style/nLiveoDrawer" >
            <intent-filter>
                <action android:name="momenify.proconnect.objects.Acceptance" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="momenify.proconnect.navigationviewpagerliveo.NavigationMain" />
        </activity>
        <activity
            android:name="momenify.proconnect.objects.EditProfileFragmentWrapper"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".ViewEducationActivity"
            android:label="@string/title_activity_view_education" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="momenify.proconnect.navigationviewpagerliveo.NavigationMain" />
        </activity>
        <activity
            android:name=".ViewExperienceActivity"
            android:label="@string/title_activity_view_experience"
            android:parentActivityName=".NavigationMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="momenify.proconnect.navigationviewpagerliveo.NavigationMain" />
        </activity>
    </application>

</manifest>
